    position: absolute;
    bottom: 0%;
    left: 45%;
    margin-left: 0px;
    color: black;
    background-color: white;
    padding: 2px;
    font-family: "Arial Narrow", Arial, sans-serif;
}
.map {
    width: 100%;
    height: 100%;
}
